<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".WelcomeActivity"
        android:background="blue">


    <androidx.viewpager.widget.ViewPager
            android:layout_width="420dp"
            android:layout_height="637dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/intro_bullets" app:layout_constraintVertical_bias="1.0"
            android:id="@+id/intro_view_pager">
    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
            android:id="@+id/intro_bullets"
            android:layout_width="156dp"
            android:layout_height="43dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_skip" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/btn_next"
            android:layout_marginBottom="16dp">

        </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:alpha=".5"
            tools:layout_editor_absoluteX="128dp" app:layout_constraintTop_toTopOf="@+id/intro_view_pager"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="@+id/intro_bullets"
            app:layout_constraintVertical_bias="0.93"/>
    <Button
            android:text="@string/skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_skip"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_next"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>